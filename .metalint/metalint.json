{
    "patterns": ["!.git/**", "!node_modules/**", "!**/lib/**", "**"],
    "hidden": true,
    "verbose": 2,
    "checkers": [
        {
            "patterns": ["src/**/*.js", "nodejs/public/**/*.js"],
            "linters": {
                "eslint": ["eslint.json", "eslint_browser.json"]
            }
        }, {
            "patterns": ["!nodejs/public/**", "nodejs/**/*.js"],
            "linters": {
                "eslint": ["eslint.json", "eslint_node.json"]
            }
        }, {
            "patterns": "**/*.html",
            "linters": "htmlhint"
        }, {
            "patterns": "**/*.css",
            "linters": "stylelint"
        }, {
            "patterns": "**/*.md",
            "linters": "markdownlint"
        }, {
            "patterns": "**/*.json",
            "linters": { "jsonlint": { "comments": false } }
        }
    ]
}
