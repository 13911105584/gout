{
    "patterns": ["!.git/**", "!node_modules/**", "!**/lib/**", "**"],
    "hidden": true,
    "verbose": 2,
    "checkers": [
        {
            "patterns": "**/*.js",
            "linters": "eslint"
        }, {
            "patterns": "**/*.html",
            "linters": "htmlhint"
        }, {
            "patterns": "**/*.css",
            "linters": "stylelint"
        }, {
            "patterns": "**/*.md",
            "linters": "markdownlint"
        }, {
            "patterns": "**/*.json",
            "linters": { "jsonlint": { "comments": false } }
        }, {
            "patterns": "**/*.xpi",
            "linters": { "addons-linter": null }
        }
    ]
}
