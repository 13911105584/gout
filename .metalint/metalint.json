{
    "patterns": ["**", "!.git/**", "!node_modules/**", "!**/lib/**"],
    "hidden": true,
    "verbose": 2,
    "checkers": [
        {
            "patterns": ["**/*.js", "!**/*.min.js"],
            "linters": ["jscs", "eslint"]
        }, {
            "patterns": "**/*.html",
            "linters": "htmlhint"
        }, {
            "patterns": "**/*.css",
            "linters": "csslint"
        }, {
            "patterns": "**/*.md",
            "linters": "markdownlint"
        }, {
            "patterns": "**/*.json",
            "linters": { "jsonlint": { "comments": false } }
        }
    ]
}
