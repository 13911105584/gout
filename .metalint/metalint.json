{
    "patterns": [
        "!.git/**", "!node_modules/**", "!**/lib/**", "!**/community/**", "**"
    ],
    "hidden": true,
    "verbose": 2,
    "checkers": [
        {
            "patterns": "src/**/*.js",
            "linters": { "eslint": ["eslint.json", "eslint_webext.json"] }
        }, {
            "patterns": "bin/**/*.js",
            "linters": { "eslint": ["eslint.json", "eslint_nodejs.json"] }
        }, {
            "patterns": "**/*.html",
            "linters": "htmlhint"
        }, {
            "patterns": "**/*.css",
            "linters": "stylelint"
        }, {
            "patterns": "**/*.md",
            "linters": "markdownlint"
        }, {
            "patterns": "**/*.json",
            "linters": { "jsonlint": { "comments": false } }
        }, {
            "patterns": "**/*.xpi",
            "linters": { "addons-linter": null }
        }
    ]
}
